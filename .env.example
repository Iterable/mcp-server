# Iterable MCP Server Configuration

# ============================================================
# API Authentication
# ============================================================

# Your Iterable API key
# - macOS: Use 'iterable-mcp keys add' to store in Keychain (recommended)
# - Windows/Linux: Set this environment variable (required)
# - Backward compatibility: macOS users can still use this env var
ITERABLE_API_KEY=your_iterable_api_key_here

# Iterable API base URL
# - macOS: Not needed when using key manager (URL stored with each key)
# - Windows/Linux: Set this for EU endpoint or custom URL (defaults to US)
# ITERABLE_BASE_URL=https://api.iterable.com

# ============================================================
# Privacy & Security Settings
# ============================================================

# Enable tools that access user PII
# ITERABLE_USER_PII=true

# Enable tools that perform write operations
# ITERABLE_ENABLE_WRITES=true

# ============================================================
# Development & Debugging
# ============================================================

# Enable debug mode for API logging
ITERABLE_DEBUG=false

# Logging configuration
LOG_LEVEL=info
LOG_JSON=false
LOG_STDERR=true

# Timeouts
API_TIMEOUT=30000
SHUTDOWN_TIMEOUT=30000

# ============================================================
# Testing (development only)
# ============================================================

CLEANUP_TEST_DATA=true
TEST_TIMEOUT=15000
